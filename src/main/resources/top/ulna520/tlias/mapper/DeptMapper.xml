<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.ulna520.tlias.mapper.DeptMapper">
    <select id="selectAll" resultType="top.ulna520.tlias.model.Dept">
        SELECT * FROM dept
    </select>

    <delete id="deleteById" parameterType="int">
        DELETE FROM dept WHERE id = #{id}
    </delete>

    <insert id="insertDept" parameterType="top.ulna520.tlias.model.Dept" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dept (name, createTime, updateTime) VALUES (#{name}, #{createTime}, #{updateTime})
    </insert>

    <select id="selectById" parameterType="int" resultType="top.ulna520.tlias.model.Dept">
        SELECT * FROM dept WHERE id = #{id}
    </select>

    <update id="updateDept" parameterType="top.ulna520.tlias.model.Dept">
        UPDATE dept SET name = #{name}, updateTime = #{updateTime} WHERE id = #{id}
    </update>
</mapper>